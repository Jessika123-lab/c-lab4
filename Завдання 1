using System;

namespace Lab4_завд1
{
    class Program
    {
        static void Main(string[] args)
        {
            //завдання 1 лаб 4
            Console.WriteLine("d=");
            double d = Convert.ToInt32(Console.ReadLine());
            double s = Math.Pow(d,2) / 2;
            double p = 2 * Math.Sqrt(2) * d;
            Console.WriteLine("s={0},p={1}", s, p);

        }
    }
}
